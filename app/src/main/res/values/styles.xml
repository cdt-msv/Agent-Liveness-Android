<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/firstShadeOfDarkGreenGoogle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/darkPinkBeach</item>
        <item name="colorAccent">@color/lightBlueFacebook</item>
    </style>

    <style name="PrimaryFlatCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/yellowBeach</item>
        <item name="android:colorControlActivated">@color/yellowBeach</item>
        <item name="android:colorControlHighlight">@color/darkPinkBeach</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>


</resources>
